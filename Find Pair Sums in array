#include<iostream>
using namespace std;
int main()
{
  cout<<"Enter array size"<<endl;
  int n,x;
  cin>>n;

  int* arr = new int[n];
  cout<<"Enter Array Elements"<<endl;

  for(int i=0; i<n; i++)
  {
    cin>>arr[i];
  }

  cout<<"Enter the sum"<<endl;
  cin>>x;
  bool atleastOnce = false;
  for(int i=0; i<n-1; i++)
  {
    for(int j=i+1; j<n; j++)
    {
      if(arr[i]+arr[j]==x)
      {
        cout<<"Pair Found at index "<<i<<" and "<<j<<"("<<arr[i]<<"+"<<arr[j]<<")"<<endl;
        atleastOnce = true;
      }
    }
  }
  if(!atleastOnce)
  {
    cout<<"No Pair Found"<<endl;
  }
}
